set autoindent
set expandtab
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4

set hlsearch
set incsearch
set smartcase

syntax enable
set number
set wrap
set linebreak

set noerrorbells
set mouse=a
set noswapfile
set title
set encoding=utf-8
set display+=lastline
set backspace=indent,eol,start

filetype on
autocmd FileType make set noexpandtab shiftwidth=8 softtabstop=0
